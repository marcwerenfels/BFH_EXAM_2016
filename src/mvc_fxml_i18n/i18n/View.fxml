<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="250.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="i18n.SimpleController">
   <bottom>
      <Button mnemonicParsing="false" onAction="#handleClickMe" text="%button.text" BorderPane.alignment="CENTER" />
   </bottom>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="%Menu.language">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#changeLanguageDE" text="%lang.de" />
                  <MenuItem mnemonicParsing="false" onAction="#changeLanguageEN" text="%lang.en" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="label" text="%label.text" />
            <Label fx:id="label2" text="%label2.text" />
            <Label fx:id="label3" text="%label3.text" />
         </children>
      </VBox>
   </center>
</BorderPane>
